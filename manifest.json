{
  "manifest_version": 3,
  "name": "Blue Border Extension",
  "version": "1.0",
  "description": "Changes the border color of the When2Meet webpage to blue.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://www.when2meet.com/*"],
      "js": ["whenToMeetScraper.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
